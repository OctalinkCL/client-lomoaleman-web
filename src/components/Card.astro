---
interface Props {
  name: string;
  address: string;
  href: string;
}

const { href, name, address } = Astro.props;
---

<li class="link-card">
  <a
    href={href}
    class="text-center border-2 rounded-md border-[#FFAA00] flex flex-col items-center min-h-44 justify-center p-6 hover:border-white transition hover:bg-gray-950"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="icon icon-tabler icons-tabler-outline icon-tabler-map-pin"
      ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
        d="M9 11a3 3 0 1 0 6 0a3 3 0 0 0 -6 0"></path><path
        d="M17.657 16.657l-4.243 4.243a2 2 0 0 1 -2.827 0l-4.244 -4.243a8 8 0 1 1 11.314 0z"
      ></path></svg
    >
    <h2 class="text-lg font-semibold uppercase my-3">{name}</h2>
    <p class="text-sm capitalize">{address}</p>
  </a>
</li>
