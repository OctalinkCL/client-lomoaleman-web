---
const slides = [
  {
    href: "/cotiza-tu-carro",
    image: "/slide1.jpg",
    title: "slide1",
  },
];
---

<section class="bg-white">
  <div class="container_ mx-auto p-4 lg:py-8">
    <div class="splide" role="group" aria-label="Slide Loomo Aleman">
      <div class="splide__track">
        <ul class="splide__list">
          {
            slides.map((slide) => (
              <li class="splide__slide">
                <a href={slide.href} aria-label={slide.title}>
                  <img
                    src={slide.image}
                    alt={slide.title}
                    class="w-full object-cover min-h-[300px] lg:min-h-[550px] rounded"
                  />
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</section>

<script>
  import "@splidejs/splide/css";
  import Splide from "@splidejs/splide";
  new Splide(".splide", {
    autoplay: true,
    arrows: false,
    perPage: 1,
    gap: 15,
    breakpoints: {
      1200: {
        gap: 0,
        perPage: 1,
      },
    },
  }).mount();
</script>
