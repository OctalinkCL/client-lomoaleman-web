---
const slides = [
  {
    href: "/cotiza-tu-carro",
    image: "/slide1.jpg",
    title: "slide1",
  },
];
---

<div class="bg-white">
  <div class="px-4 py-5 lg:hidden bg-black mb-3">
    <a
      href="/menu"
      aria-label="Link menu"
      class="bg-lomo flex items-center justify-center w-full p-3 text-black font-bold rounded"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="icon icon-tabler icons-tabler-outline icon-tabler-vocabulary"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
          d="M10 19h-6a1 1 0 0 1 -1 -1v-14a1 1 0 0 1 1 -1h6a2 2 0 0 1 2 2a2 2 0 0 1 2 -2h6a1 1 0 0 1 1 1v14a1 1 0 0 1 -1 1h-6a2 2 0 0 0 -2 2a2 2 0 0 0 -2 -2z"
        ></path><path d="M12 5v16"></path><path d="M7 7h1"></path><path
          d="M7 11h1"></path><path d="M16 7h1"></path><path d="M16 11h1"
        ></path><path d="M16 15h1"></path></svg
      >
      <span class="ml-3">Ver Carta Online</span>
    </a>
  </div>

  <section>
    <div class="container mx-auto px-4 pb-4 lg:pt-4">
      <div class="splide" role="group" aria-label="Slide Loomo Aleman">
        <div class="splide__track">
          <ul class="splide__list">
            {
              slides.map((slide) => (
                <li class="splide__slide">
                  <a href={slide.href} aria-label={slide.title}>
                    <img
                      src={slide.image}
                      alt={slide.title}
                      class="w-full object-cover min-h-[300px] lg:min-h-[550px] rounded"
                    />
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </div>
  </section>
</div>

<script>
  import "@splidejs/splide/css";
  import Splide from "@splidejs/splide";
  new Splide(".splide", {
    autoplay: true,
    arrows: false,
    perPage: 1,
    gap: 15,
    breakpoints: {
      1200: {
        gap: 0,
        perPage: 1,
      },
    },
  }).mount();
</script>
